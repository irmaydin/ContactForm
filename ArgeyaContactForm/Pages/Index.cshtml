@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<style>
    .form-control:focus {
        box-shadow: none;
        border-color: #999999
    }

    .Form-container {
        background-color: #e6e6e6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; 
        max-width: 600px; 
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-6 text-center" style="margin-top:150px">
            <h1>Argeya Software Solutions</h1>
            <br />
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="darkred" class="bi bi-telephone-fill" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                </svg> +90 535 511 12 10
            </h4>
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="darkred" class="bi bi-envelope-fill" viewBox="0 0 20 20">
                    <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" />
                </svg>iletisim@argeya.com
            </h4>

        </div>
        <div class="Form-container rounded mt-5 mb-5">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right"> <strong>CONTACT US</strong></h4>
                        </div>
                        <form method="post" class="row mt-3">
                            <div class="col-sm-6 mb-3">
                                <input type="text" class="form-control" name="FirstName" placeholder="First Name" aria-label="First name" value="" required>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <input type="text" class="form-control" name="LastName" placeholder="Last Name" aria-label="Last name" value=""  required>
                            </div>
                            <div class="col-sm-12 mb-3">
                                <input type="tel" class="form-control" name="PhoneNumber"
                                       placeholder="Phone Number" value="" required>
                            </div>
                            <div class="col-sm-12 mb-3">
                                <input type="email" class="form-control" name="Email"
                                       placeholder="name@example.com" value=""  required>
                            </div>
                            <div class="col-sm-12 mb-3">
                                <select class="form-select" name="Department" required>
                                    <option selected>Department</option>
                                    <option value="Muhasebe">Muhasebe</option>
                                    <option value="Teknik Destek">Teknik Destek</option>
                                    <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                                </select>
                            </div>
                            <div class="col-sm-12 mb-3">
                                <textarea class="form-control" name="Message" rows="3"
                                          placeholder="Your Message" value=""></textarea>
                            </div>

                            <button type="button" class="btn btn-danger">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

